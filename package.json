{
  "name": "@parkrun/root",
  "private": true,
  "type": "module",
  "workspaces": [
    "frontend",
    "scraper",
    "prisma",
    "api",
    "cdk"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "db": "docker compose up -d postgres",
    "db:migrate": "npx prisma migrate deploy",
    "db:reset": "docker-compose down -v && docker-compose up -d postgres && npx prisma migrate reset --force",
    "db:studio": "npx prisma studio",
    "scraper": "npm run scraper -w scraper",
    "frontend": "npm run ui -w frontend",
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces",
    "test": "npm run test --workspaces --if-present",
    "test:api": "npm run test -w api",
    "test:frontend": "npm run test -w frontend",
    "start": "docker compose up",
    "start:db": "docker compose up -d postgres",
    "stop": "docker compose down"
  },
  "devDependencies": {
    "tsx": "^4.20.6",
    "prisma": "^6.16.3"
  }
}
